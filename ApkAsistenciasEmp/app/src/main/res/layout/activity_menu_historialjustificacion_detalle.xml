<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#FDFDFD">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:background="#FDFDFD">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0576F9"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0">


                            <ImageView
                                android:id="@+id/Frm_Perfil_ImgFoto"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/expediente__1_" />

                            <TextView
                                android:id="@+id/txtNombreEmpleado"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Justificación Detalle"
                                android:textColor="#fff"
                                android:textSize="22dp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                    android:layout_marginHorizontal="40dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Título :"
                            android:textSize="20dp"
                            android:layout_marginEnd="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblTitulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Emergencia familiar"
                            android:textSize="18dp"


                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha :"
                            android:textSize="20dp"
                            android:layout_marginEnd="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblFecha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15-02-2024"
                            android:textSize="18dp"


                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado :"
                            android:textSize="20dp"
                            android:layout_marginEnd="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Frm_lblEstado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ESPERA"
                            android:textColor="#A3A5A3"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textRazon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Razon :"
                            android:textSize="20dp"
                            android:layout_marginEnd="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Frm_lblRazon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ANTES"
                            android:textSize="18dp"
                            android:textColor="#DAC71E"
                            android:textStyle="bold"
                            />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:id="@+id/lblDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#F1F1F1"
                        android:padding="5dp"
                        android:text="..."
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comentario"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:id="@+id/lblComentario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="18dp"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#F1F1F1"
                        />
                    <Button
                        style="@android:style/Widget.Button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/blue_button"
                        android:onClick="OnClick_BtnRegresar"
                        android:text="Regresar"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>